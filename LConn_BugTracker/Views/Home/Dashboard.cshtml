@section scripts
    {
    <script type="text/javascript">
        $(function () {
            var url = '@Url.Action("GetMorrisData1","Charts")';
            $.post(url).then(function (response) {
                new Morris.Bar({
                    element: 'MorrisBarChart1',
                    gridTextSize: 9,
                    xLabelAngle: 25,
                    data: response,
                    xkey: 'label',
                    ykeys: ['value'],
                    labels: ['Ticket Count'],
                    resize: true
                });
            });
        });
    </script>

