<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-notebook icon-md"> Project</i>
                            <div class="ml-5">
                                <p class="mt-2 text-lg-right text-success h2 card-text">@Model.Name</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-user icon-md"> Project Manager</i>
                            <div class="ml-5">
                                <p class="mt-2 text-lg-right text-success h2 card-text">@User.IsInRole("ProjectManager")</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="d-sm-flex flex-row flex-wrap text-center text-sm-left align-items-center">
                            <i class="icon-tag icon-md"> Description</i>
                            <div class="ml-sm-3 ml-md-0 ml-xl-3 mt-2 mt-sm-0 mt-md-2 mt-xl-0">
                                <p class="mt-2 text-lg-right text-facebook h2 card-text">@Model.Description</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-clock icon-md"> Date Created</i>
                            <div class="ml-5">
                                <p class="mt-2 text-lg-right text-reddit h2 card-text">@Model.Created</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-clock icon-md"> Last Updated</i>
                            <div class="ml-5">
                                <p class="mt-2 text-lg-right text-reddit h2 card-text">@Model.Updated</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-people icon-md"> # Developers on Project</i>
                            <div class="ml-5">
                                <div class="mt-2 text-lg-right text-reddit h2 card-text"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 grid-margin">
                <div class="card d-flex align-items-center">
                    <div class="card-body">
                        <div class="d-flex flex-row align-items-center">
                            <i class="icon-people icon-md"> # Submitters on Project</i>
                            <div class="ml-5">
                                <div class="mt-2 text-lg-right text-reddit h2 card-text"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
    <!-- content-wrapper ends -->
    <!-- partial:partials/_footer.html -->
